<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/fondoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription="@null"
        android:focusable="false"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <!-- Scrim (ligero) para legibilidad del texto) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- Logo superior derecho -->
    <ImageView
        android:id="@+id/logoFondo"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/logofondo" />

    <!-- Bloque superior izquierdo: Título + mic -->
    <LinearLayout
        android:id="@+id/topLeftBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingTop="36dp"
        android:paddingEnd="36dp">

        <!-- Título FIJO -->
        <TextView
            android:id="@+id/tvTituloFijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Bienvenido al centro de autoatención Entel"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- RelativeLayout para posicionar libremente el mic -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Micrófono -->
            <ImageButton
                android:id="@+id/btnListen"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_highlight"
                android:contentDescription="Pregúntame"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitCenter"
                android:src="@drawable/preguntame" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Entelín -->
    <ImageView
        android:id="@+id/imgEntelin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="100dp"
        android:layout_marginTop="180dp"
        android:adjustViewBounds="true"
        android:contentDescription="Mascota Entelín"
        android:src="@drawable/entelinmic" />

    <!-- CONTENEDOR DINÁMICO -->
    <FrameLayout
        android:id="@+id/contenedorIntencion"
        android:layout_width="640dp"
        android:layout_height="wrap_content"
        android:minHeight="340dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="#1A000000">

        <!-- Instrucciones iniciales -->
        <TextView
            android:id="@+id/tvInstrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presiona el botón de micrófono y pregúntame lo que necesites.\n\nEjemplos:\n• 'Quiero activar Disney+'\n• 'Necesito cambiar la clave de mi Wi‑Fi'\n• 'Muéstrame mis canales'\n• 'Quiero hablar con un ejecutivo'"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp" />
    </FrameLayout>

    <!-- Preguntas frecuentes -->
    <LinearLayout
        android:id="@+id/faqsBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingBottom="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Preguntas frecuentes"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFaqMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_highlight"
                android:minWidth="180dp"
                android:text="ACTIVAR MAX"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnFaqDisney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_highlight"
                android:minWidth="180dp"
                android:text="ACTIVAR DISNEY+"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnFaqWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_highlight"
                android:minWidth="180dp"
                android:text="CAMBIAR WI-FI"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnFaqCanales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_highlight"
                android:minWidth="180dp"
                android:text="MIS CANALES"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Capa de celebración -->
    <ImageView
        android:id="@+id/bgCelebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/celebration"
        android:visibility="gone" />

    <!-- QR legacy -->
    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="28dp"
        android:contentDescription="@null"
        android:src="@drawable/contactoentel"
        android:visibility="gone" />

</FrameLayout>
